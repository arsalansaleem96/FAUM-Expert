<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faum.faum_expert.New_Deal_Time"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <CheckBox
        android:id="@+id/checkBox8to10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8-10"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/checkBox6to8"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/checkBox6to8" />

    <CheckBox
        android:id="@+id/checkbox12to2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox8to10"
        app:layout_constraintRight_toRightOf="@+id/checkBox9to11"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/checkBox9to11"
        app:layout_constraintTop_toTopOf="@+id/checkBox8to10" />

    <CheckBox
        android:id="@+id/checkBox6to8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6-8"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tvDealDays"
        android:layout_marginStart="25dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDealDays"
        android:layout_marginLeft="25dp" />

    <CheckBox
        android:id="@+id/checkBox9to11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9-11"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toRightOf="@+id/tvDealDays"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/checkbox12to2"
        android:layout_marginRight="36dp" />

    <EditText
        android:id="@+id/etEstimatedTime"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Estimated Time e.g 120 mins"
        android:layout_marginEnd="8dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/tvDealTime"
        app:layout_constraintRight_toRightOf="@+id/tvNewDealContinueTitle"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintTop_toTopOf="@+id/tvNewDealContinueTitle"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tvNewDealContinueTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deal Schedule"
        android:textSize="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxMonday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:layout_marginStart="1dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxWednesday"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/checkBoxWednesday"
        android:layout_marginLeft="1dp" />

    <CheckBox
        android:id="@+id/checkBoxWednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="73dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDealDays"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="73dp" />

    <CheckBox
        android:id="@+id/checkBoxTuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxThursday"
        app:layout_constraintRight_toRightOf="@+id/tvDealDays" />

    <CheckBox
        android:id="@+id/checkBoxFriday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxWednesday"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/checkBoxWednesday"
        android:layout_marginLeft="3dp" />

    <CheckBox
        android:id="@+id/checkBoxThursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thursday"
        android:layout_marginStart="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/checkBoxWednesday"
        app:layout_constraintLeft_toRightOf="@+id/checkBoxWednesday"
        android:layout_marginLeft="13dp" />

    <TextView
        android:id="@+id/tvDealTime"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:text="Deal Timing"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/checkBox8to10"
        app:layout_constraintRight_toRightOf="@+id/checkBoxMonday"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="21dp"
        app:layout_constraintLeft_toLeftOf="@+id/etNewDealPrice"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp" />

    <TextView
        android:id="@+id/tvDealDays"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="Deal Days"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="@+id/checkBoxThursday"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tvDealTime"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btnNewDealConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginEnd="126dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="31dp"
        android:layout_marginRight="126dp" />

    <EditText
        android:id="@+id/etNewDealPrice"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Price per meal"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toLeftOf="@+id/checkBoxThursday"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnNewDealConfirm"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxFriday"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="26dp" />

    <EditText
        android:id="@+id/etNewDealSize"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Person size e.g  5"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/checkBoxMonday"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="23dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/etNewDealPrice" />

</android.support.constraint.ConstraintLayout>
